	<profiles>
		<profile>
			<id>win32</id>
			<activation>
				<os>
					<family>windows</family>
					<arch>x86</arch>
				</os>
				<activeByDefault>true</activeByDefault>				
			</activation>
			<properties>
				<org.signalml.mbfj.platform>win32</org.signalml.mbfj.platform>	
			</properties>			
		</profile>
		<profile>
			<id>linux</id>
			<activation>
				<os>
					<name>linux</name>
					<family>unix</family>
					<arch>i386</arch>
				</os>
			</activation>
			<properties>
				<org.signalml.mbfj.platform>x86</org.signalml.mbfj.platform>	
			</properties>			
		</profile>
		
		<!-- profiles below this line have not been tested -->
		
		<profile>
			<id>win64</id>
			<activation>
				<os>
					<family>windows</family>
					<arch>x86_64</arch>
				</os>
			</activation>
			<properties>
				<org.signalml.mbfj.platform>win64</org.signalml.mbfj.platform>	
			</properties>			
		</profile>
		<profile>
			<id>linux64</id>
			<activation>
				<os>
					<name>linux</name>
					<family>unix</family>
					<arch>x86_64</arch>
				</os>
			</activation>
			<properties>
				<org.signalml.mbfj.platform>x86_64</org.signalml.mbfj.platform>	
			</properties>			
		</profile>
	</profiles>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>		
		<maven.test.skip>true</maven.test.skip>		
	</properties>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
					<encoding>UTF-8</encoding>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<executions>
					<execution>
						<id>attach-sources</id>
						<phase>verify</phase>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<!-- <version>2.2</version> -->
				<configuration>
					<archive>
						<manifest>
							<mainClass>org.signalml.app.SignalMLApplication</mainClass>
						</manifest>
					</archive>
				</configuration>
			</plugin>        		
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<!-- <version>2.2-beta-3</version> -->
				<configuration>
					<descriptors>
						<descriptor>src/main/assembly/full.xml</descriptor>
					</descriptors>
				</configuration>
				<executions>
					<execution>
						<id>assemble-packages</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-site-plugin</artifactId>
				<!-- <version>2.0-beta-7</version> -->
				<configuration>
					<outputEncoding>UTF-8</outputEncoding>
				</configuration>
			</plugin>
		</plugins>
	</build>

