	<profiles>
		<profile>
			<id>win32</id>
			<activation>
				<os>
					<family>windows</family>
					<arch>x86</arch>
				</os>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<org.signalml.mbfj.platform>win32</org.signalml.mbfj.platform>
			</properties>
		</profile>
		<profile>
			<id>linux</id>
			<activation>
				<os>
					<name>linux</name>
					<family>unix</family>
					<arch>i386</arch>
				</os>
			</activation>
			<properties>
				<org.signalml.mbfj.platform>x86</org.signalml.mbfj.platform>
