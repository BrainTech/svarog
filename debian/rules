#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

DEB_MAVEN_REPO = $(CURDIR)/debian/maven-repo
PACKAGE        = svarog svarog-plugin-tool svarog-plugin-fft svarog-plugin-stager svarog-plugin-artifact
DEB_JAR_PACKAGE = $(PACKAGE)

mvn = mvn $(mvnflags)
mvnflags = -Dmaven.repo.local=$(DEB_MAVEN_REPO) -o
copy_repo = /usr/share/maven-debian-helper/copy-repo.sh
mvnflags += --projects plugins/FFTSignalTool,plugins/PluginToolCommon,plugins/Artifact,plugins/Stager
mvnflags += -Dmaven.test.skip=true


%:
	dh $@

override_dh_auto_configure:
	$(copy_repo) debian/
	for x in $(DEB_JAR_PACKAGE); do \
	mh_patchpoms -p$$x -v --debian-build --keep-pom-version --maven-repo=$(DEB_MAVEN_REPO) ; \
	done

override_dh_auto_build:
	$(mvn) package

override_dh_install:
	dh_install
	mh_install -v
	jh_classpath -v
	jh_exec -v

override_dh_auto_clean:
	rm -rf target
	rm -rf $(DEB_MAVEN_REPO)
	for x in $(DEB_JAR_PACKAGE); do \
	mh_unpatchpoms -p$$x -v; \
	done